    <script>
        function revealBirthdayPage() {
            document.getElementById("cakeScreen").style.display = "none";
            document.getElementById("birthdayScreen").style.display = "block";
            document.body.style.background = "linear-gradient(45deg, #ff9a9e, #fad0c4, #fad0c4, #ffdde1)";
            createConfetti();
            document.getElementById("bgMusic").play();
        }

        function createConfetti() {
            for (let i = 0; i < 100; i++) {
                let confetti = document.createElement("div");
                confetti.classList.add("confetti");
                confetti.style.left = Math.random() * 100 + "vw";
                confetti.style.animationDuration = (Math.random() * 3 + 2) + "s";
                confetti.style.background = `hsl(${Math.random() * 360}, 100%, 75%)`;
                document.body.appendChild(confetti);
            }
        }
    </script>

